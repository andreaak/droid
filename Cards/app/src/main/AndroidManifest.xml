            <action android:name="com.andreaak.cards.SelectLessonAndLanguageActivity" />

            <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name=".CardChooseActivity"
            android:label="Choose one"
            android:theme="@android:style/Theme.Holo">
            <action android:name="com.andreaak.cards.CardChooseActivity" />

            <category android:name="android.intent.category.DEFAULT" />
        </activity>

    </application>

