        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:theme="@android:style/Theme.Holo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FileChooserActivity"
            android:label="Choose Database File"
            android:theme="@android:style/Theme.Holo">
            <action android:name="com.andreaak.cards.FileChooserActivity" />

            <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name=".DirectoryChooserActivity"
            android:label="Choose Download Directory"
            android:theme="@android:style/Theme.Holo">
            <action android:name="com.andreaak.cards.DirectoryChooserActivity" />

            <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name=".GoogleFilesChooserActivity"
