<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andreaak.note">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--
    uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" /
    -->
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@android:style/Theme.Holo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FileChooserActivity"
            android:label="Choose File"
            android:theme="@android:style/Theme.Holo">
            <action android:name="com.andreaak.note.FileChooserActivity" />

            <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name=".EntityChooserActivity"
            android:label="Note"
            android:theme="@android:style/Theme.Holo">
            <action android:name="com.andreaak.note.EntityChooserActivity" />

            <category android:name="android.intent.category.DEFAULT" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable">
            </meta-data>
        </activity>
        <activity
            android:name=".NoteTextActivity"
            android:theme="@android:style/Theme.Holo">
            <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name=".NoteHtmlActivity"
            android:theme="@android:style/Theme.Holo">
            <category android:name="android.intent.category.DEFAULT" />
        </activity>
        <activity
            android:name=".NoteFindActivity"
            android:label="Note"
            android:theme="@android:style/Theme.Holo">
            <action android:name="com.andreaak.note.NoteFindActivity" />

            <category android:name="android.intent.category.DEFAULT" />
        </activity>
    </application>

</manifest>